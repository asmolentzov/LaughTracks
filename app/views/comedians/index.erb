<section id="statistics">
  <h2>Statistics</h2>
  <blockquote>
    There are lies, damned lies, and statistics.
  </blockquote>
  <cite>Mark Twain</cite>
  <table>
    <tr>
      <th>
        Average Age
      </th>
      <th>
        Average TV Special Runtime
      </th>
      <th>
        Cities
      </th>
      <th>
        Total TV Specials
      </th>
      </tr>
      <tr>
        <td>
          <%= @average_age.round(2) %>
        </td>
        <td>
          <%= @average_length.to_i %> minutes
        </td>
        <td>
          <%= @cities.join(' ') %>
        </td>
        <td>
          <%= @total_specials %>
        </td>
        </tr>
  </table>  
</section>

<section class="row">
    <% @comedians.each do |comedian| %>
      <article class="comedian" id=comedian-<%= comedian.id %>>
        <h3><a href="comedians/<%= comedian.id %>"><%= comedian.name %></a></h3>
        <div class="comedian-stats">
          Age: <%= comedian.age %> <br />
          City: <%= comedian.city %> <br />
          Total Specials: <%= comedian.total_specials %>
        </div>
        <div class="specials"> 
          <h5>Specials: </h5>
          <% if comedian.specials.empty? %>
            <p>
            No joke: this comedian has no specials.
            </p>  
          <% else %>
          <ul> 
            <% comedian.specials.each do |special| %>
            <li>
                <h6><%= special.name %></h6>
                Runtime: <%= special.length %> <br />
                <img class="img-thumbnail" src="<%= special.image_location %>" alt="<%=special.name %>">
            </li>
            <% end %>
            </ul>
          <% end %>
          </div>
      </article>
  <% end %>
</section>
<section class="new">
  <a href="/comedians/new">Add a new comedian</a>
</section>