<header>
  <h1>Comedians</h1> <br />
  <blockquote cite="https://www.brainyquote.com/quotes/louis_c_k_452752">
    It's a positive thing to talk about terrible things and make people laugh about them.
  </blockquote>
  <cite>Louis C.K.</cite>
</header>
<section id="statistics">
  <h2>Statistics</h2>
  <table>
    <tr>
      <th>
        Average Age
      </th>
      <th>
        Average TV Special Runtime
      </th>
      <th>
        Cities
      </th>
      <th>
        Total TV Specials
      </th>
      </tr>
      <tr>
        <td>
          <%= @average_age %>
        </td>
        <td>
          <%= @average_length.to_i %> minutes
        </td>
        <td>
          <%= @cities.join(' ') %>
        </td>
        <td>
          <%= @total_specials %>
        </td>
        </tr>
  </table>  
</section>
<section class="row">
    <% @comedians.each do |comedian| %>
      <article class="comedian" id=comedian-<%= comedian.id %>>
        <h3><a href="comedians/<%= comedian.id %>"><%= comedian.name %></a></h3>
        <div class="comedian-stats">
          Age: <%= comedian.age %> <br />
          City: <%= comedian.city %> <br />
          Total Specials: <%= comedian.total_specials %>
        </div>
        <div class="specials"> 
          <h6>Specials: </h6>
          <% if comedian.specials.empty? %>
            <p>
            No joke: this comedian has no specials.
            </p>  
          <% else %>
          <ul> 
            <% comedian.specials.each do |special| %>
            <li>
                <%= special.name %>
                Runtime: <%= special.length %>
                <img class="img-thumbnail" src="<%= special.image_location %>" alt="<%=special.name %>">
            </li>
            <% end %>
            </ul>
          <% end %>
          </div>
      </article>
  <% end %>
</section>